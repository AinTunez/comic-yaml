{
  "name": "comic-yaml",
  "displayName": "Comic YAML",
  "description": "Preview YAML comic scripts as formatted markdown and full HTML preview with print functionality",
  "version": "0.3.2",
  "publisher": "TechnoMoose",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#0366d6",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aintunez/comic-yaml.git"
  },
  "homepage": "https://github.com/aintunez/comic-yaml",
  "bugs": {
    "url": "https://github.com/aintunez/comic-yaml/issues"
  },
  "license": "MIT",
  "keywords": [
    "comic",
    "script",
    "yaml",
    "preview",
    "markdown",
    "comics",
    "screenplay",
    "writing"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onCommand:comicScriptPreview.openPreview",
    "onCommand:comicScriptPreview.openMarkdownPreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "comicScriptPreview.openPreview",
        "title": "Open Comic Script Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "comicScriptPreview.openMarkdownPreview",
        "title": "Open Raw Markdown Preview",
        "icon": "$(markdown)"
      },
      {
        "command": "comicScriptPreview.print",
        "title": "Print Comic Script",
        "icon": "$(output)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "comicScriptPreview.openPreview",
          "when": "resourceFilename =~ /\\.comic\\.(yml|yaml)$/",
          "group": "navigation"
        },
        {
          "command": "comicScriptPreview.openMarkdownPreview",
          "when": "resourceFilename =~ /\\.comic\\.(yml|yaml)$/",
          "group": "navigation"
        }
      ],
      "webview/title": [
        {
          "command": "comicScriptPreview.print",
          "when": "webviewType == 'comicScriptPreview'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "./publish.sh",
    "install:local": "npm run package && code --install-extension $(ls comic-yaml-*.vsix | sort -V | tail -n 1) --force",
    "test": "npm run compile:test && node ./demo/out/test/runTest.js",
    "compile:test": "tsc -p ./demo/tsconfig.test.json",
    "test:vscode": "npm run compile && npm run compile:test && node ./demo/out/test/runTest.js",
    "test:playwright": "npx playwright test --config=demo/playwright.config.ts",
    "test:playwright:ui": "npx playwright test --config=demo/playwright.config.ts --ui",
    "test:playwright:demo": "npx playwright test demo/tests/working-demo.spec.ts --config=demo/playwright.config.ts --headed",
    "demo:setup": "node demo/demo-script.js",
    "demo:automated": "node demo/run-automated-demo.js",
    "demo:focus": "node demo/focus-demo-window.js",
    "pretest": "npm run compile",
    "install:playwright": "npx playwright install",
    "dev": "open dev/layout-tester.html || start dev/layout-tester.html || xdg-open dev/layout-tester.html"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/glob": "^9.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "playwright": "^1.54.2"
  }
}
